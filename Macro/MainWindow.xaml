<mah:MetroWindow
    x:Class="Macro.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:IconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:view="clr-namespace:Macro.View"
    xmlns:mah="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
    xmlns:UI="clr-namespace:Macro.UI"
    GlowBrush="{DynamicResource MahApps.Brushes.Accent}"
    BorderThickness="1"
    Title="{Binding Path=Title, Source={StaticResource LabelLocator}}" Height="600" Width="480" WindowStartupLocation="CenterScreen" 
    mc:Ignorable="d">
    <mah:MetroWindow.RightWindowCommands>
        <mah:WindowCommands>
            <Button Name="btnGithub">
                <StackPanel Orientation="Horizontal">
                    <IconPacks:PackIconMaterial Width="24" Height="24" Kind="Github" />
                </StackPanel>
            </Button>
            <Button Name="btnSetting">
                <StackPanel Orientation="Horizontal">
                    <IconPacks:PackIconMaterial Width="24" Height="24" Kind="ContentSaveSettingsOutline" />
                    <TextBlock Margin="4 0 0 0" VerticalAlignment="Center" Text="{Binding Path=Setting, Source={StaticResource LabelLocator}}" />
                </StackPanel>
            </Button>
        </mah:WindowCommands>
    </mah:MetroWindow.RightWindowCommands>
    
    <Grid>
        <DockPanel HorizontalAlignment="Stretch" LastChildFill="True" VerticalAlignment="Stretch">
            <Border BorderBrush="Black" BorderThickness="2" DockPanel.Dock="Top" Height="110">
                <DockPanel LastChildFill="True" Margin="0,0,0,6">
                    <DockPanel DockPanel.Dock="Top" LastChildFill="False">
                        <Label Height="40" VerticalAlignment="Top" Content="{Binding Path=SelectProcess, Source={StaticResource LabelLocator}}" DockPanel.Dock="Left"/>
                        <Button Name="btnStart" Width="50" Content="{Binding Path=Start, Source={StaticResource LabelLocator}}" DockPanel.Dock="Right"/>
                        <Button Name="btnStop" Width="50" Visibility="Collapsed" Content="{Binding Path=Stop, Source={StaticResource LabelLocator}}" DockPanel.Dock="Right"/>
                    </DockPanel>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="7*"></ColumnDefinition>
                            <ColumnDefinition Width="3*"></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <ComboBox Grid.Column="0" Name="comboProcess" Height="40" Margin="0,0,0,0"/>
                        <Grid Grid.Column="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="40"></ColumnDefinition>
                                <ColumnDefinition Width="60"></ColumnDefinition>
                            </Grid.ColumnDefinitions>
                            <Button Grid.Column="0" Style="{DynamicResource MahApps.Styles.Button.Circle}" x:Name="btnRefresh" Width="35" Height="35" >
                                <IconPacks:PackIconMaterial Width="15" Height="15" Kind="Refresh" />
                            </Button>
                            <CheckBox x:Name="checkFix" Grid.Column="1" Content="{Binding Path=Fix, Source={StaticResource LabelLocator}}" Margin="5,0,0,0" Width="50"></CheckBox>
                        </Grid>
                    </Grid>
                </DockPanel>
            </Border>
            <DockPanel DockPanel.Dock="Left">
                <view:EventListView x:Name="EventListView"/>
            </DockPanel>
        </DockPanel>
        <Grid x:Name="AdOverlay" Visibility="Collapsed" Background="#80000000">
            <view:WebViewControl x:Name="EmbeddedWebView" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" />
        </Grid>

    </Grid>
</mah:MetroWindow>
